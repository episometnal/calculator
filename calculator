sum = 0

def Addition(number_a):

    global sum

    sum += number_a
    return sum


def Subtraction(number_s):

    global sum

    sum -= number_s
    return sum


def Multiply(number_m):

    global sum

    if sum == 0:
        sum = number_m
        return sum

    else:
        sum = sum * number_m
        return sum



def Division(number_d):

    global sum

    if sum == 0:
        sum = number_d
        return sum

    else:
        sum = sum / number_d
        return sum



def Exponential(number_1,number_e):

    global sum

    sum = number_1 ** number_e
    return sum



def Factoriel(number_f):

    global sum

    if number_f == 0:
        sum = 1
        return sum

    else:
        sum = 1
        for i in range(1,number_f+1):
            sum = sum * i
        return sum



#Screen that shows progress
print("""
 ____________________
|_____CALCULATOR_____|
|                    |
|                    |
|   Addition(+)      |
|   Subtration(-)    |
|   Multiply(*)      |
|   Division(/)      |
|   Exponential(^)   |
|   Factoriel(!)     |
|                    |
|   Clear(C)         |
|   Quit(q)          |
|                    |
|____________________|
""")

print(sum)

while True:


    progress = input("Progress:")

    if progress == "q":
        break


    elif progress == "C":
        sum = 0
        print(sum)


    elif progress == "+":

        try:
            number = float(input("Number:"))

        except ValueError:
            print("Enter a number...")

        else:
            print(Addition(number))



    elif progress == "-":

        try:
            number = float(input("Number:"))

        except ValueError:
            print("Enter a number...")

        else:
            print(Subtraction(number))



    elif progress == "*":

        try:
            number = float(input("Number:"))

        except ValueError:
            print("Enter a number...")

        else:
            print(Multiply(number))


    elif progress == "/":

        try:
            number = float(input("Number:"))

        except ValueError:
            print("Enter a number...")

        else:
            print(Division(number))


    elif progress == "^":

        try:
            number_e = float(input("Exponential number:"))

        except ValueError:
            print("Enter a number...")

        else:
            print(Exponential(sum,number_e))


    elif progress == "!":

        number = int(sum)       #to get factoriel number must be integer
        print(Factoriel(number))
